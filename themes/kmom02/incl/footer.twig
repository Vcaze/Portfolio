<div class="footer">
    <div class="first-col">
        <p></p>
    </div>

    <div class="actions">
        {% for action in pages["_meta"].meta.Actions %}
        <div class="icon">
            <a href="{{ action.url }}" title="{{ action.title }}" role="button">
                <i class="{{ action.icon }}" aria-hidden="true"></i>
                <span class="sr-only">{{ action.title }}</span>
            </a>
        </div>
        {% endfor %}
    </div>

    <div class="social" >
        {% for social in pages["_meta"].meta.social %}
        <div class="icon" style="--temp-hover-color: {{ social.color }};">
            <a href="{{ social.url }}" title="{{ social.title }}" role="button" target="_blank">
                <i class="{{ social.icon }}" aria-hidden="true"></i>
                <span class="sr-only">{{ social.title }}</span>
            </a>
        </div>
        {% endfor %}
    </div>
</div>

<script src="{{ theme_url }}/../shared//js/modernizr-3.3.1-custom.min.js" type="text/javascript"></script>
<script src="{{ theme_url }}/../shared//js/utils.js" type="text/javascript"></script>
<script src="{{ theme_url }}/../shared//js/responsive-navbar.js" type="text/javascript"></script>
